<!doctype html>
<html lang="en">
    <head>
        <%- include('./partials/header') %>
    </head>
    <body>
        <div class="container vh-100">
            <h1>Chat App</h1>
            <div class="row h-50">
                <div class="col-md-3 d-flex flex-column h-100">
                    <div id="rooms" class="bg-light overflow-scroll h-100"></div>
                    <form id="createRoom" class="mt-auto">
                        <div class="input-group">
                            <input class="form-control" name="roomTopic" id="roomTopic" type="text"
                                   placeholder="Room Topic" required/>
                            <button class="btn btn-primary" type="submit">Create!</button>
                        </div>
                    </form>
                </div>
                <div class="col-md-9 d-flex flex-column h-100">
                    <div id="msgs" class="bg-light overflow-scroll h-100"></div>
                    <form id="sendMsg" class="mt-auto">
                        <fieldset disabled>
                            <div class="input-group">
                                <input class="form-control" type="text" id="msg"
                                       placeholder="Your message..." required/>
                                <input class="btn btn-primary" type="submit"/>
                            </div>
                        </fieldset>
                    </form>
                </div>
            </div>

            <script src="/static/js/main.js"></script>
            <script src="/static/js/chat.js"></script>
        </div>
    </body>
</html>